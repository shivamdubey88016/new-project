
<% layout('layouts/boilerplate')%>
<h3 class="text-center my-4">Edit Your Listing</h3>

<form method="POST" action="/listings/<%= listingl._id %>?_method=PUT" class="container" style="max-width: 700px;"  
  class="needs-validation"  novalidate >
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" name="listing[title]" value="<%= listingl.title %>" required  class="form-control">
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea class="form-control" id="description" name="listing[description]" rows="4" required><%= listingl.description %></textarea>
  </div>

  <div class="mb-3">
    <label for="image" class="form-label">Image Link</label>
    <input type="text" class="form-control" id="image" name="listing[image]" value="<%= listingl.image %>" required  class="form-control">
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <label for="price" class="form-label">Price</label>
      <input type="number" class="form-control" id="price" name="listing[price]" value="<%= listingl.price %>" required  class="form-control">
    </div>

    <div class="col-md-6 mb-3">
      <label for="country" class="form-label">Country</label>
      <input type="text" class="form-control" id="country" name="listing[country]" value="<%= listingl.country %>" required  class="form-control">
    </div>
  </div>

  <div class="mb-3">
    <label for="location" class="form-label">Location</label>
    <input type="text" class="form-control" id="location" name="listing[location]" value="<%= listingl.location %>" required  class="form-control">
  </div>

  <div class="text-center">
    <button type="submit" class="btn btn-primary">Update</button>
  </div>
</form>
