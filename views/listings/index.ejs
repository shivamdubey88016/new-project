<!-- Custom CSS -->
<style>
 body {
  background: linear-gradient(to right, #81b6e4, #ffffff);
  font-family: 'Segoe UI', sans-serif;
  color: #222;
}

.filters {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  color: #222;
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.filter {
  text-align: center;
  margin: auto;
  margin-top: 1.5rem;
  opacity: 0.85;
  color: #333;
}

.filter:hover {
  color: #ca7404;
}

.tax-info {
  display: none;
  color: #ca7404;
  font-weight: 500;
  margin-left: 4px;
}

.switch {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1.2rem;
  border: 1.5px solid #007bff;
  border-radius: 20px;
  background: #fff;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  margin: 1.5rem auto;
  width: fit-content;
  transition: box-shadow 0.2s, border-color 0.2s;
}

.switch:hover {
  box-shadow: 0 4px 16px rgba(0,0,0,0.10);
  border-color: #0056b3;
}

h3 {
  text-align: center;
  margin-bottom: 2rem;
  font-weight: bold;
}

.card {
  transition: all 0.3s ease;
  border-radius: 15px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  margin-bottom: 30px;
}

.card:hover {
  transform: scale(1.03);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
}

.card-img-top {
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  height: 180px;
  object-fit: cover;
}

.card-text {
  font-size: 14px;
}

.listing-link {
  font-weight: bold;
  color: #007bff;
  text-decoration: none;
  transition: color 0.2s;
}

.listing-link:hover {
  color: #0056b3;
  text-decoration: underline;
}
</style>

<div class="container">
  
  <div class="row">
    
          <% for (let listing of alllistings) { %>
  <div class="col-md-3 d-flex justify-content-center mb-4">
    <div class="card" style="width: 18rem;">
      <a href="/listings/<%= listing._id %>">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image">
      </a>
      <div class="card-body">
        <p class="card-text">
          <a class="listing-link" href="/listings/<%= listing._id %>"><%= listing.title %></a><br>
          <strong>Description:</strong> <%= listing.description %><br>
          <strong>Location:</strong> <%= listing.location %><br>
          <strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %>/night<i class="tax-info">+18% Gst</i><br>
          <strong>Country:</strong> <%= listing.country %>
        </p>
      </div>
    </div>
  </div>
<% } %>
  </div>
</div>
<script>
// ...existing code...
let price = document.getElementById("switchCheckDefault");
price.addEventListener("click", () => {
  let tax = document.getElementsByClassName("tax-info");
  for (let info of tax) {
    if (info.style.display === "inline" || info.style.display === "") {
      info.style.display = "none";
    } else {
      info.style.display = "inline";
    }
  }
});


</script>