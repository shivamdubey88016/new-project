<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-8 offset-2">
    <br>
    <br>
    <h2>Create a New Listing</h2>
    <form method="POST" action="/listings" novalidate class="needs-validation">
      
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" id="title" name="listing[title]" required class="form-control">
        <div class="valid-feedback">Title looks good</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea id="description" name="listing[description]" rows="4" cols="50" required class="form-control"></textarea>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image Link:</label>
        <input type="text" id="image" name="listing[image]" required class="form-control" placeholder="Image URL">
      </div>

      <div class="row col-4">
        <div class="mb-3">
          <label for="price">Price:</label>
          <input type="number" id="price" name="listing[price]" required class="form-control">
        </div>

        <div class="mb-3 col-8">
          <label for="country" class="form-label">Country:</label>
          <input type="text" id="country" name="listing[country]" required class="form-control">
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input type="text" id="location" name="listing[location]" required class="form-control">
      </div>

      <br><br>
      <button type="submit" class="btn btn-dark">Add</button>
    </form>
  </div>
</div>